{
  "manifest_version": 3,
  "name": "Brainrot Blocker",
  "version": "0.0.5",
  "description": "This extension keeps your browser brainrot free by blocking certain websites.",
  "permissions": ["tabs", "scripting"],
  "icons": {
    "16": "/icons/16.png",
    "32": "/icons/32.png",
    "48": "/icons/48.png",
    "128": "/icons/128.png"
  },
  "author": {
    "email": "lanneken09@gmail.com"
  },
  "short_name": "Brainrot Blocker",
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "index.js"
  }
}
